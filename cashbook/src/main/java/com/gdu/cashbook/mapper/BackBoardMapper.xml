<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gdu.cashbook.mapper.BackBoardMapper">
	<!-- 게시판 삭제 시 백업게시판 추가 -->
	<insert id="insertBackBoard" parameterType="com.gdu.cashbook.vo.Board">
		INSERT INTO backboard(
			board_title,
			board_contents,
			member_id,
			board_date
		) VALUES (
			#{boardTitle},
			#{boardContents},
			#{memberId},
			NOW()
		)
	</insert>
</mapper>